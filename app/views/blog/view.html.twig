{% extends "blog/layout.html.twig" %}
{% block left_navigation_clusters_class %} class="active"{% endblock %}
{% block title %}{{ post.getTitle() }} - Blog{% endblock %}
{% block blog_content %}
    <h1>{{ post.getTitle() }}</h1>
    <p><em>{{ post.getDate() | date('l jS \\of F Y') }}</em></p>

    <p>{{ post.getBody() | markdown }}</p>

    <div class="badges">
        {% for tags in post.getTags() %}
        <a href="{{ path('blog', {tag: tags.getName()}) }}" class="badge">{{ tags.getName() }}</a>
        {% endfor %}
    </div>
{% endblock %}
